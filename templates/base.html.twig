{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}jekwwer/symfony-boostrap-template{% endblock %}</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/build/app.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">Home</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="{{ path('page1') }}">Page #1</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('page2') }}">Page #2</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">{% block body %}{% endblock %}</div>
  </body>
</html>
